<%- include('../partials/header') %>


<div class = 'container'>
	
	<h1>Edit <%= comment.title %></h1>

	<div>
		<form action = '/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT' method = 'POST'>
			<div class='form-group'>
				<input class = 'form-control' type = 'text' name = 'comment[author]' value = '<%= comment.author %>'>
			</div>
			<div class='form-group'>
				<input class = 'form-control' type = 'text' name = 'comment[title]' value = '<%= comment.title %>'>
			</div>
			<div class = 'form-group'>
				<input class = 'form-control' type = 'text' name = 'comment[text]' value = '<%= comment.text %>'>
			</div>
			<div class = 'form-group'>
				<button class = 'btn btn-primary mb-5'>Submit</button>
			</div>
		</form>
	</div>
</div>


				
<%- include('../partials/footer') %>
<%- include('./partials/header') %>

<div class = 'container-fluid login'>
	
	<div class = 'text-center'>
		<h1>New Password for Esprit!</h1>
	</div>
	
	
	<div class="mt-5">
		<form method='POST' action='/reset/<%= token %>?_method=PUT'>
			<div class='form-group'>
				<label for='password'>New Password</label>
				<input class='form-control' id='password' type='password' name='password' placeholder='elemento_24'>
			</div>
			
			<div class='form-group'>
				<label for='confirm'>Confirm Password</label>
				<input class='form-control' id='confirm' type='password' name='confirm' placeholder='elemento_24'>
			</div>
			
			<div class='form-group'>
				<button class='btn btn-primary float-right'>
					Login
				</button>
			</div>
		</form>
	</div>
	
</div>

<%- include('./partials/footer') %>
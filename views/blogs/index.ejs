	<html>
	<head>
		<title>Esprit</title>
		<meta content="width=device-width, initial-scale=1" name="viewport" />
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet"	href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		<link rel="stylesheet"	href="/stylesheets/app.css">
		<link rel="stylesheet"	href="/stylesheets/index.css">
	</head>
	<body>
		<%- include('../partials/navbar') %>
		
		<div class='container mt-4'>
			<% if(error && error.length > 0){ %>
				<div class='alert alert-danger text-center' role='alert'>
					<%= error %>
				</div>
			<% } %>
			<% if(success && success.length > 0){ %>
				<div class='alert alert-success text-center' role='alert'>
					<%= success %>
				</div>
			<% } %>
		</div>
		
		<div class = 'container'>
    		<div class = 'jumbotron my-5'>
    			<div class = 'display-4'>
    				<i class="fas fa-pen-square"></i> Welcome to Esprit
    			</div>
    			<hr class="my-4">
    			<div>
    				<p>Blogging is to writing what extreme sports are to athletics: more free-form, more accident-prone, less formal, more alive. It is, in many ways, writing out loud...</p>
    			</div>
    			<a href="/blogs/new"><div class='btni mainBtn'>Add New Blog</div></a>
    			<a class="ml-2" href="/users"><div class='btni mainBtn'>View Users</div></a>
    			<form action="/blogs" method="GET" class="float-right" id = "searchForm" style="display: inline-flex;">
					<input type="search" class = "form-control" placeholder="Search" name="search" id="search" value = "<%= query.search %>" aria-label="Search">
					<input type = "submit" value = "Search" id = "search-btn" class='btni mainBtn mx-2'>
				</form>
    		</div>
    	</div>

    	<div class="container">
    		<div class='row'>
    			<% blogs.docs.forEach(function(blog){ %>
    				<div class='col-lg-4 col-md-6'>
    					<div class="card-container">
    						<div class="cardi">
    							<div class="front">
    								<h2 class="sub-title">- <%= blog.author.username %></h2>
    								<h1 class="title"><%= blog.title %></h1>
    								<img class="image" src="<%= blog.images[0].url %>" alt="No Image Available" />
    							</div>
    							<div class="back">
    								<h3 class="synopsis">Summary</h3>
    								<p class="para">
										<% if(blog.summary.length) { %>
						            		<%= blog.summary.substring(0,250) %>...
						            	<% } else { %>
						            		No Summary Provided by the Author
						            	<% } %>
									</p>
    								<a href = "/blogs/<%= blog.id %>"><div class="btni" id = "readMore">Read More</div></a>
    								<span class="btni" id="comment"><i class="fas fa-comment"></i><%= blog.comments.length %></span>
    								<span class="btni" id="like"><i class="fas fa-thumbs-up"></i><%= blog.likes.length %></span>
    							</div>
    						</div>
    					</div>
    				</div>
    			<% }); %>
    		</div>	
    	</div>
    	
    	<%- include('../partials/paginate.ejs') %>
    	
	</body>
	
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/49b4b0b11c.js" crossorigin="anonymous"></script>

</html>
